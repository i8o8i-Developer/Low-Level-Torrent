# DST Torrent System - Production Configuration
# Copy this file to .env and modify values for your environment

# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=5043
DEBUG_MODE=false
SECRET_KEY=Your-Secret-Key-Here

# Database Configuration
DATABASE_URL=sqlite:///Data/Torrent_System.db

# Cryptography Configuration
RSA_PRIVATE_KEY_PATH=Crypto/Keys/Server_Private.pem
RSA_PUBLIC_KEY_PATH=Crypto/Keys/Server_Public.pem
AES_MASTER_KEY=Your-Aes-Master-Key-Here
ENABLE_QUANTUM_RESISTANCE=true

# Blockchain Configuration
BLOCKCHAIN_NETWORK=MainNet
BLOCKCHAIN_RPC_URL=http://localhost:8545
CONTRACT_ADDRESS=Your-Contract-Address

# Security Configuration
ENABLE_ENCRYPTION=true
ENABLE_STEGANOGRAPHY=false
SELF_DESTRUCT_ENABLED=false
SELF_DESTRUCT_HOURS=24

# Torrent Configuration
DEFAULT_PIECE_SIZE=262144
MAX_PIECE_SIZE=2097152
MIN_PIECE_SIZE=16384

# Network Configuration
MAX_CONNECTIONS=100
CONNECTION_TIMEOUT=30
BANDWIDTH_LIMIT_UP=0
BANDWIDTH_LIMIT_DOWN=0

# Storage Configuration
STORAGE_BASE_DIR=Storage
TEMP_CLEANUP_HOURS=24
MAX_STORAGE_SIZE_GB=100

# API Configuration
API_VERSION=v1
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
CORS_ORIGINS=*

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_MAX_SIZE=10 MB
LOG_RETENTION=30 days